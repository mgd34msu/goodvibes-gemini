{
  "name": "goodvibes",
  "version": "1.0.0",
  "description": "GoodVibes extension for Gemini CLI - Full-stack development suite",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "goodvibes-tools": {
      "command": "node",
      "args": [
        "${extensionPath}${/}tools${/}implementations${/}tool-search-server${/}dist${/}index.cjs"
      ],
      "env": {
        "GEMINI_PLUGIN_ROOT": "${extensionPath}",
        "NODE_ENV": "production"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}session-start.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}pre-tool-use.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}post-tool-use-failure.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}post-tool-use.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}permission-request.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}user-prompt-submit.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}stop.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}subagent-start.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}subagent-stop.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}pre-compact.js\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}pre-compact.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}session-end.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${extensionPath}${/}hooks${/}scripts${/}dist${/}notification.js\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}